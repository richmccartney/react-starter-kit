{
  "name": "react-starter-kit",
  "version": "1.2.0",
  "description": "Simple React starter kit using; Webpack, Babel, Jest, Enzyme, Eslint, Flow and Emotion.",
  "main": "index.js",
  "author": "Richard McCartney <richard@mccartney.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "start": "webpack-dev-server --config webpack.dev.js --mode development --open",
    "build": "webpack -p --config webpack.prod.js --progress",
    "lint": "eslint ./src/",
    "flow": "flow",
    "test": "jest -u",
    "test:watch": "jest -u --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@emotion/babel-preset-css-prop": "^10.0.9",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.2.0",
    "eslint-plugin-flowtype": "^3.9.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.98.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "open": "^6.3.0",
    "prop-types": "^15.6.2",
    "react-hot-loader": "^4.3.4",
    "redux-thunk": "^2.3.0",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "emotion": "^10.0.9",
    "emotion-normalize": "^10.0.0",
    "history": "^4.7.2",
    "path": "^0.12.7",
    "prettier": "^1.14.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-emotion": "^10.0.0",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/jest.setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn flow && yarn lint"
    }
  }
}
